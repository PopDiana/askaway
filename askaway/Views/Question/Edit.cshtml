@model askaway.Models.Question

@{
    ViewData["Title"] = "Edit";
}
<div class="col-md-4">
</div>

<div class="row">
    <div class="col-md-4 text-primary" style="margin-top:50px">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"> Summary </label>
                <input asp-for="Title" placeholder="Add a preview for your question" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">

                <textarea asp-for="Text" placeholder="Your question goes here..." class="form-control" rows="7"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input data-val="true"
                       data-val-required="The Anonymous field is required."
                       id="Anonymous"
                       name="Anonymous"
                       type="checkbox"
                       value="true" />

                <input name="Anonymous" type="hidden" value="false" />
                <label class="control-label">Anonymous</label>

            </div>
            <div class="form-group" style="float:right;margin-top:10px">
                <a asp-action="Details" asp-route-id="@Model.QuestionId" class="btn btn-primary">
                    <span class="glyphicon glyphicon-arrow-left"></span> Back
                </a>

                <input type="submit" value="Save" class="btn btn-primary" />

            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
